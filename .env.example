# wpAgentic Environment (Premium mode)

# App Mode: 'premium' uses DB/Auth; 'oss' runs without
APP_MODE=premium
AUTH_ENABLED=true
DB_ENABLED=true

# Server session secret (32+ chars)
SESSION_SECRET=replace-with-random-32-characters

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-32-characters

# Database (Postgres)
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/wpagentic
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wpagentic

# Admins: comma-separated emails allowed to access /admin (middleware)
# Also contributes to app roles used by RBAC.
ADMIN_EMAILS=

# AI defaults (safe fallbacks)
AI_DEFAULT_PROVIDER=openai
AI_DEFAULT_MODEL=gpt-4o-mini
WRITE_MODE_DEFAULT=false

# Firecrawl (optional)
FIRECRAWL_API_URL=https://your-firecrawl-host
FIRECRAWL_API_KEY=replace-with-key

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Redis (optional, for background tasks)
REDIS_URL=redis://localhost:6379

# Stripe (premium payments)
# For subscriptions, define at least one recurring price.
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_PRODUCT_ID=
STRIPE_PRICE_ID=
STRIPE_PRICE_ID_YEARLY=
STRIPE_WEBHOOK_SECRET=

# Enforce subscription gating for premium endpoints
PREMIUM_REQUIRE_SUBSCRIPTION=false

# Node env
NODE_ENV=development
# UI feature flags
# Set to 'false' to hide the four quick suggestions above the chat input
NEXT_PUBLIC_ENABLE_SUGGESTED_ACTIONS=true
